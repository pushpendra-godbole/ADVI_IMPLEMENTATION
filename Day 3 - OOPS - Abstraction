class Student:
    def __init__(self, name, marks):       
        self.name = name                    
        self.marks = marks                  

    def average(self):                      
        return sum(self.marks) / len(self.marks)  

    def info(self):
        print(f"Name: {self.name}, Avg: {self.average()}")

s1 = Student("Pushpendra", [80, 85, 90])
s1.info()  

